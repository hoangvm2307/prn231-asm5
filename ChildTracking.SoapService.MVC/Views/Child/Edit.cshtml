@model ChildTracking.Repositories.Models.Child

@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
}

<h1>Chỉnh sửa thông tin trẻ em</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChildId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label">Họ và tên</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DateOfBirth" class="control-label">Ngày sinh</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Gender" class="control-label">Giới tính</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="BloodType" class="control-label">Nhóm máu</label>
                <select asp-for="BloodType" class="form-control">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="AB">AB</option>
                    <option value="O">O</option>
                </select>
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MedicalConditions" class="control-label">Tình trạng sức khỏe</label>
                <textarea asp-for="MedicalConditions" class="form-control"></textarea>
                <span asp-validation-for="MedicalConditions" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Allergies" class="control-label">Dị ứng</label>
                <textarea asp-for="Allergies" class="form-control"></textarea>
                <span asp-validation-for="Allergies" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Ghi chú</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}